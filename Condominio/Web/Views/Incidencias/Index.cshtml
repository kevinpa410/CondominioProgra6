@model IEnumerable<Infrastructure.Models.Incidencias>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Incidencias</h2>

            @if (Web.Security.AutorizeView.IsUserInRole(new string[] { "Residente" }))
            {
                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </p>
            }           

            <table class="table table-striped table-hover">
                <thead>
                    <tr>

                        <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.EstadoIncidencia.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.Residencias.ID)</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.EstadoIncidencia.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Residencias.ID)</td>

                            <td>
                                @if (Web.Security.AutorizeView.IsUserInRole(new string[] { "Administrador" }))
                                {
                                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-primary" })
                                }
                                @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@if (Web.Security.AutorizeView.IsUserInRole(new string[] { "Administrador" }))
{

}