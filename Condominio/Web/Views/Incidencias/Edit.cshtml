@model Infrastructure.Models.Incidencias

@{
    ViewBag.Title = "Edit";
}

<br />
@using (Html.BeginForm("Save", "Incidencias", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <h4 class="card-title">Editar Incidencias</h4>
                </div>

                <div class="card-body">
                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.IDResidencias, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-10 mx-auto">
                                @Html.EditorFor(model => model.IDResidencias, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                @Html.HiddenFor(model => model.IDResidencias, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.IDResidencias, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @if (Model.IDEstado != 3)
                        {
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EstadoIncidencia, htmlAttributes: new { @class = "control-label col-md-3 mx-auto" })
                                    <div class="col-md-10 mx-auto">
                                        @Html.DropDownList("IDEstado", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {

                            <div class="form-group">
                                @Html.LabelFor(model => model.EstadoIncidencia.Descripcion, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-10 mx-auto">
                                    @Html.EditorFor(model => model.EstadoIncidencia.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                    @Html.HiddenFor(model => model.EstadoIncidencia.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.EstadoIncidencia.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-10 mx-auto">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                @Html.HiddenFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 mx-auto">
                                <input type="submit" value="Guardar" class="btn btn-success" />
                            </div>
                        </div>

                    </div>
                    <br />
                    <div class="card-footer text-center">
                        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



