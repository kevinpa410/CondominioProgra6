@model Infrastructure.Models.Incidencias

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Save", "Incidencias", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Incidencias</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)


        @Html.LabelFor(model => model.IDResidencias, htmlAttributes: new { @class = "control-label col-md-2", @readonly = "readonly" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.IDResidencias, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.IDResidencias, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDResidencias, "", new { @class = "text-danger" })
        </div>
    </div>

    if (Model.IDEstado != 3)
    {
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.EstadoIncidencia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IDEstado", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.EstadoIncidencia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.EstadoIncidencia.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.EstadoIncidencia.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EstadoIncidencia.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }





    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
