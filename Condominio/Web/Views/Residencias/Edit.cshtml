@model Infrastructure.Models.Residencias

@{
    ViewBag.Title = "Edit";
}

<br />
@using (Html.BeginForm("Save", "Residencias", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card text-center">
                    <div class="card-header">
                        <h2>Editar Residencia</h2>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDUsuario, "IDUsuario", htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                <div class="col-md-10 mx-auto">
                                    @Html.DropDownList("IDUsuario", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                    @Html.ValidationMessageFor(model => model.IDEstado, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDEstado, "IDEstado", htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                <div class="col-md-10 mx-auto">
                                    @Html.DropDownList("IDEstado", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                    @Html.ValidationMessageFor(model => model.IDEstado, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CantPersonas, htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                <div class="col-md-10 mx-auto">
                                    @Html.EditorFor(model => model.CantPersonas, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.ValidationMessageFor(model => model.CantPersonas, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AnnoInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10 mx-auto">
                                    @Html.EditorFor(model => model.AnnoInicio, new { htmlAttributes = new { @class = "form-control mx-auto", @readonly = "readonly" } })
                                    @Html.HiddenFor(model => model.AnnoInicio, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.ValidationMessageFor(model => model.AnnoInicio, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.CantCarros, htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                <div class="col-md-10 mx-auto">
                                    @Html.EditorFor(model => model.CantCarros, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.ValidationMessageFor(model => model.CantCarros, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10 mx-auto">
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                </div>
                            </div>

                        </div>
                        <br />
                        <div class="card-footer text-center">
                            @Html.ActionLink("Back to List", "IndexAdmin", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



