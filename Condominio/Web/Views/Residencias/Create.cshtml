@model Infrastructure.Models.Residencias

@{
    ViewBag.Title = "Create";
}

<br />  

@using (Html.BeginForm("Save", "Residencias", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="card mx-auto mt-5" style="width: 500px;">
        <div class="card-body text-center">
            <h2 class="">Crear Residencia</h2>

            <div class="form-group">
                @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="w-50 mx-auto">
                    @Html.DropDownListFor(model => model.IDUsuario, (SelectList)ViewBag.IDUsuario, "Seleccione un Usuario", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EstadoResidencias, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="w-50 mx-auto">
                    @Html.DropDownListFor(model => model.IDEstado, (SelectList)ViewBag.IDEstado, "Seleccione el Estado", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CantPersonas, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="w-50 mx-auto">
                    @Html.EditorFor(model => model.CantPersonas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CantPersonas, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AnnoInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="w-50 mx-auto">
                    <input type="date" @Html.EditorFor(model => model.AnnoInicio, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.AnnoInicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CantCarros, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="w-50 mx-auto">
                    @Html.EditorFor(model => model.CantCarros, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CantCarros, "", new { @class = "text-danger" })
                </div>
            </div>

            <br/>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a href="@Url.Action("Index")" class="btn btn-default">Back to List</a>
                </div>
            </div>

        </div>
    </div>

}

