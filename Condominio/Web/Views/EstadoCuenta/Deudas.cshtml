@model IEnumerable<Infrastructure.Models.EstadoCuenta>

@{
    ViewBag.Title = "Deudas";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Pagos Pendientes</h2>

            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Mes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado_EstadoCuenta.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PlanesCobro.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Residencias.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario.correo)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado_EstadoCuenta.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlanesCobro.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Residencias.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.correo)
                        </td>
                        <td>
                            @Html.ActionLink("Pagar Plan de Cobro", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


