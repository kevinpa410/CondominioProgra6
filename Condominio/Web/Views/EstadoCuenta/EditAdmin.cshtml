@model Infrastructure.Models.EstadoCuenta


@{
    ViewBag.Title = "Edit";
}

<br />

@using (Html.BeginForm("SaveAdmin", "EstadoCuenta", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-3">
                <div class="card text-center">
                    <div class="card-header">
                        <h2>Editar Reservacion</h2>
                    </div>
                    <div class="card-body">

                        <div class="form-horizontal">

                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>EstadoCuenta</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)
                                @Html.HiddenFor(model => model.IDEstado)
                                @Html.HiddenFor(model => model.Estado_EstadoCuenta)

                                @Html.LabelFor(model => model.IDUsuario, htmlAttributes: new { @class = "control-label col-md-2", @readonly = "readonly" })
                                <div class="col-md-10 mx-auto">
                                    @Html.DisplayFor(model => model.IDUsuario, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.HiddenFor(model => model.IDUsuario, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.ValidationMessageFor(model => model.IDUsuario, "", new { @class = "text-danger" })
                                </div>

                                <hr />
                                @Html.LabelFor(model => model.IDResidencia, htmlAttributes: new { @class = "control-label col-md-2 mx-auto", @readonly = "readonly" })
                                <div class="col-md-10 mx-auto">
                                    @Html.DisplayFor(model => model.IDResidencia, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.HiddenFor(model => model.IDResidencia, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                    @Html.ValidationMessageFor(model => model.IDResidencia, "", new { @class = "text-danger" })
                                </div>

                                @if (Model.IDPlanCobro != 0)
                                {
                                    <hr />
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PlanesCobro.Descripcion, htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                        <div class="col-md-10 mx-auto">
                                            @Html.DisplayFor(model => model.PlanesCobro.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                            @Html.HiddenFor(model => model.PlanesCobro.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                            @Html.ValidationMessageFor(model => model.PlanesCobro.Descripcion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <hr />
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IDPlanCobro, "IDPlanCobro", htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                        <div class="col-md-10 mx-auto">
                                            @Html.DropDownList("IDPlanCobro", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                            @Html.ValidationMessageFor(model => model.IDPlanCobro, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                }


                                @if (Model.Mes != null)
                                {
                                    <hr />
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Mes, htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                        <div class="col-md-10 mx-auto">
                                            @Html.DisplayFor(model => model.Mes, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                            @Html.HiddenFor(model => model.Mes, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                            @Html.ValidationMessageFor(model => model.Mes, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <hr />
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Mes, htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                        <div class="col-md-10 mx-auto">
                                            <input type="date" @Html.EditorFor(model => model.Mes, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                                   @Html.ValidationMessageFor(model => model.Mes, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                }

                                @if (Model.IDEstado == 1)
                                {
                                    <hr />
                                    <div class="col">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Estado_EstadoCuenta.Descripcion, htmlAttributes: new { @class = "control-label col-md-2 mx-auto" })
                                            <div class="col-md-10 mx-auto">
                                                @Html.DisplayFor(model => model.Estado_EstadoCuenta.Descripcion, new { htmlAttributes = new { @class = "form-contro mx-autol" } })
                                                @Html.HiddenFor(model => model.Estado_EstadoCuenta.Descripcion, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                                @Html.ValidationMessageFor(model => model.Estado_EstadoCuenta.Descripcion, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>

                            @if (Model.IDEstado == 1)
                            {
                                <hr />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10 mx-auto">
                                        <input type="submit" value="Guardar" class="btn btn-success" />
                                    </div>
                                </div>
                            }

                            <br />
                            <div class="card-footer text-center">
                                @Html.ActionLink("Volver a la Lista", "IndexAdmin", null, new { @class = "btn btn-primary" })
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





