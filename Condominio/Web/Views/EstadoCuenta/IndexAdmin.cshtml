@model IEnumerable<Infrastructure.Models.EstadoCuenta>

@{
    ViewBag.Title = "Index";
}

<h2>Estado de Cuenta</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.nombre) y @Html.DisplayNameFor(model => model.Usuario.apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanesCobro.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.nombre) @Html.DisplayFor(modelItem => item.Usuario.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanesCobro.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
        </tr>
    }
</table>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Planes de Cobro</h2>
            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </p>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Usuario.nombre) y @Html.DisplayNameFor(model => model.Usuario.apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PlanesCobro.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mes)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario.nombre) @Html.DisplayFor(modelItem => item.Usuario.apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PlanesCobro.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mes)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
