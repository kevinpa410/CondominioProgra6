@model IEnumerable<Infrastructure.Models.EstadoCuenta>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Planes de Cobro</h2>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Usuario.nombre) y @Html.DisplayNameFor(model => model.Usuario.apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PlanesCobro.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mes)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario.nombre) @Html.DisplayFor(modelItem => item.Usuario.apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PlanesCobro.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mes)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Pagar Plan de Cobro", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
